<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <div class="container">
            <img src="../../Images/brand.png" height="35" />
            @Html.ActionLink("Books!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("书籍", "Index", "Books", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("用户", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("评论", "Index", "Comments", new { area = "" }, new { @class = "nav-link" })</li>

                    <li class="nav-item">@Html.ActionLink("查看书籍", "ViewBooks", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("查看用户", "ViewUsers", "User", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>

            <ul class="nav navbar-nav navbar-right">
                <!-- Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        <i class="fa fa-user-circle" style="font-size:24px"></i>&nbsp
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="~/Users/UserInfo">个人信息</a>
                        <a class="dropdown-item" href="~/Users/UserEditInfo">信息修改</a>
                        <a class="dropdown-item" href="~/Users/UserEditAccount">账户信息</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="~/Account/Logout">
                            <i class="fa fa-power-off" style="font-size:16px"></i>&nbsp 退出
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        <br/>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
